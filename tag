--exclude=src/Captcha/* \
--exclude=OptionTransfer.js \
--exclude=Zend/* \
--exclude=cookies.js \
--exclude=s3class.php \
--exclude=jquery.js \
--exclude=underscore.js \
--exclude=prototype.js \
--exclude=*picker.js \
--exclude=mootools-core.js \
--exclude=mootools-more.js \
--exclude=json-minified.js \
--exclude=clientcide.js \
