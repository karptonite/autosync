result=$(rsync -e 'ssh' -avzi --exclude 'tools/php-cs-fixer/' --exclude 'vendor/sebastian/type/tools/' --exclude 'node_modules/.bin/' --exclude 'tests_error.log' --exclude 'tags' --exclude '*.cache' --exclude '.idea/' --exclude '.session.vim' --exclude 'tools/php-cs-fixer/' --exclude '.git/' --exclude '.editorconfig' --exclude '.svn/' --exclude 'documentation/' --exclude '.DS_Store' --exclude '.FBCLockFolder' --exclude 'templates_c/' --exclude 'css/compiled/' --exclude 'app/compiled/smarty/' --exclude '*.git' --exclude '*.out' --exclude '*.mlog' --delete $1 $2 | grep -v '\(f\|d\)\.\.t\(\.\|p\)\.\.\.\|L\.\.\(T\|t\)\.\.\.\.' | grep -v 'app/cache/clockwork')
